# Static caching rules (best-effort; some hosts may ignore this file)
# Cache hashed build assets aggressively
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache public images for a long time (update filenames if images change)
/images/*
  Cache-Control: public, max-age=31536000, immutable

# Favicons and logos
/logo-fyt.png
  Cache-Control: public, max-age=31536000, immutable
/logo-fyt.webp
  Cache-Control: public, max-age=31536000, immutable
/logo-fyt-*.avif
  Cache-Control: public, max-age=31536000, immutable

# Service worker
/sw.js
  Cache-Control: public, max-age=0, must-revalidate

# HTML - no cache for SPA navigation
/*
  Cache-Control: public, max-age=0, must-revalidate
